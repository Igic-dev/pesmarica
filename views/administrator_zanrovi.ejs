<!doctype html>
<html>
<head>
    <title>Administrator - Žanrovi </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css">
    <link href="https://fonts.googleapis.com/css?family=Quicksand:300,400" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
    <link rel='stylesheet' href='/stylesheets/style_admin.css'>
</head>
<body>
<nav class="navbar">
    <span class="open-slide">
      <a href="#" onclick="openSlideMenu()">
        <svg width="30" height="30">
            <path d="M0,5 30,5" stroke="#fff" stroke-width="5"/>
            <path d="M0,14 30,14" stroke="#fff" stroke-width="5"/>
            <path d="M0,23 30,23" stroke="#fff" stroke-width="5"/>
        </svg>
      </a>
    </span>
    <ul class="navbar-nav">&nbsp;&nbsp;Administrator - Žanrovi</ul>
</nav>

<div id="side-menu" class="side-nav">
    <a href="#" class="btn-close" onclick="closeSlideMenu()">&times;</a>
    <a href="/administrator_korisnici" style="font-size: 20px;"><i class='fas fa-user text-white'></i>&nbsp; Korisnici</a>
    <a href="/administrator_autori" style="font-size: 20px;"><i class="fas fa-pencil-alt text-white"></i>&nbsp; Autori</a>
    <a href="/administrator_zanrovi" style="color: white; font-weight: bold; font-size: 20px;"><i class="far fa-file-alt text-white"></i>&nbsp; Žanrovi</a>
    <a href="/administrator_pesme" style="font-size: 20px;"><i class='fas fa-music text-white'></i>&nbsp; Pesme</a>
    <a href="/administrator_logout" style="font-size: 20px;"><i class="fas fa-sign-out-alt"></i>&nbsp; Odjavi se</a>
</div>

<div class="container py-2 my-5">
    <div class='row justify-content-end my-5'>
        <a class="btn" data-toggle="modal" data-target="#modalnew" role="button">Dodaj žanr</a>
    </div>
    <div class='table-responsive-sm'>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Naziv</th>
                <th scope="col">Akcije</th>
            </tr>
            </thead>
            <tbody>
            <% data.forEach(function(i) { %>
            <tr>
                <td><%= i.id %></td>
                <td><%= i.naziv %></td>
                <td>
                    <a href="/administrator_zanrovi/izmeni/<%= i.id %>" class="icon-btn text-warning" data-toggle="modal" data-target="#modaledit<%= i.id %>" role="button"><i class="fas fa-edit"></i></a>
                    <a href="/administrator_zanrovi/izbrisi/<%= i.id %>" onclick="return confirm('Da li ste sigurni da želite da obrišete navedeni žanr?')" class="icon-btn text-danger" role="button"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
                <div id="modaledit<%= i.id %>" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Izmena žanra</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                                <div class="container">
                                    <div class="formholder">
                                        <form action="/administrator_zanrovi/izmeni/<%= i.id %>" method="POST">
                                            <div class="row form-group">
                                                <input type="hidden" name="id" value="<%= i.id %>">
                                                <input type="text" placeholder="Naziv" name="naziv" value="<%= i.naziv%>">
                                                <i class="fas fa-file-alt"></i>
                                            </div>
                                            <div class="row form-group">
                                                <input type="submit" class="btn" value="Sačuvaj">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn-default" data-dismiss="modal" style="border: none; outline: none;">Otkaži</button>
                            </div>
                        </div>
                    </div>
                </div>
            </tbody>
            <% }) %>
        </table>
    </div>
</div>

<div id="modalnew" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Dodavanje novog žanra</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="formholder">
                        <form action="administrator_zanrovi" method="POST">
                            <div class="row form-group">
                                <input type="text" placeholder="Naziv" name="naziv" required>
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="row form-group">
                                <input type="submit" class="btn" value="Sačuvaj">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-default" data-dismiss="modal" style="border: none; outline: none;">Otkaži</button>
            </div>
        </div>
    </div>>
</div>

<script type="text/javascript" src="javascripts/admin_script.js"></script>
<script type="text/javascript" src="/jquery.js"></script>
<script type="text/javascript" src="js/bootstrap.js"></script>
</body>
</html>
